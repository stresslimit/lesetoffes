<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width,initial-scale=1">

  <title>{{ page_title }} - {{ shop.name }}</title>
  <link rel="shortcut icon" href="{{ 'favicon.ico' | asset_url }}">

  {{ content_for_header }}

  <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:400,700' rel='stylesheet'>
  {{ 'build.css'  | asset_url | stylesheet_tag }}

  {{ 'sticky.js' | asset_url | script_tag }}
  {{ 'build.js' | asset_url | script_tag }}

</head>
<body>
<div id="cart_container"></div>

<div class="container header">

  <a href="/" id="logo">
    {{ 'logo.svg' | asset_url | img_tag: shop.name }}
  </a>
  {% include 'main-menu' %}
  {% include 'search-form' %}

</div>


{% if template == 'index' %}
  {% include 'banner' %}
{% else %}
  <hr>
  {% include 'sub-menu' %}
{% endif %}


<div class="main-content {{ template | replace: '.', ' ' | truncatewords: 1, '' }}">
	{{ content_for_layout }}
</div>


{% include 'footer' %}
{% include 'footer-scripts' %}

</body>
</html>
