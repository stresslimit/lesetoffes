/* Body Background and default font */
body {
  background: #FFFFFF url({{ 'tile3_C.png' | asset_url }}) !important;
  font-family: Garamond, "Hoefler Text", "Times New Roman", Times, serif;
}

/* Defautl text color */
body, .group h3, .pgroup h3 {
  color: #333333;
}

/* Insert Logo */
#logo {
  background: url({{ 'logo_etoffes.png' | asset_url }});
  height: 108px;
  margin: 0 auto 15px auto;
  width: 182px;
}

/* Remove tagline */
#tagline {
  display: none;
}

/* Better looking product list */
#products h3 {
  color: #333333;
  font-size: 16px;
  font-weight: bold;
}
#products #thumbs span {
  color: #333333;
  font-size: 15px;
}
#products #thumbs td {
  line-height: 1.3;
}

/* Remove stupid green color on wallet */
#cost, #order-num, #steps {
  color: #333333;
  font-family: inherit;
}

/* Error messages */
.field-with-errors, .address-notification {
  background: #EEEEEE;
  border: none;
  border-top: 1px solid #AC954B;
  border-bottom: 1px solid #AC954B;
  padding: 8px 5px;
}

/* Undo overview background and borders on main area */
#header {
  background: none;
}
#main, #main #overview {
  background: #fff;
  border: none;
}
#main #overview > * {
  border: none;
}
#main #thumbs div {
  border: none;
}
#footer {
  background: none;
}

/* Sections borders and backgrounds */
#email, #addresses {
  background: none;
  border: none;
  border-top: 1px solid #999999;
}

#buttons {
  background: none;
  border: none;
  border-top: 1px solid #524F50;
}